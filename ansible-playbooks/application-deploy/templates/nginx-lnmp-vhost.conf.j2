# LNMP 虚拟主机配置
# ⚠️ 教学声明：此配置文件主要用于学习环境，生产环境请根据实际需求调整

server {
    listen 80;
    listen [::]:80;
    server_name {{ lnmp_server_name }};
    root {{ lnmp_web_root }};
    index index.php index.html index.htm;
    
    # 访问日志
    access_log /var/log/nginx/{{ lnmp_server_name }}_access.log detailed;
    error_log /var/log/nginx/{{ lnmp_server_name }}_error.log;
    
    # 安全设置
    server_tokens off;
    limit_conn addr 10;
    limit_req zone=one burst=20 nodelay;
    
    # 根目录设置
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }
    
    # PHP 处理
    location ~ \.php$ {
        include fastcgi_params;
        fastcgi_pass unix:/run/php/php{{ lnmp_php_version }}-fpm.sock;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_param PATH_INFO $fastcgi_path_info;
        
        # 超时设置
        fastcgi_connect_timeout 60;
        fastcgi_send_timeout 60;
        fastcgi_read_timeout 60;
        
        # 缓冲设置
        fastcgi_buffer_size 128k;
        fastcgi_buffers 4 256k;
        fastcgi_busy_buffers_size 256k;
        
        # 安全头部
        fastcgi_param HTTP_PROXY "";
        fastcgi_param SERVER_NAME $host;
    }
    
    # 静态文件缓存
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|woff|woff2|ttf|svg)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        add_header Vary Accept-Encoding;
        access_log off;
    }
    
    # 拒绝访问隐藏文件
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # 拒绝访问备份文件
    location ~ ~$ {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # 限制访问敏感文件
    location ~* \.(conf|ini|log|sh|sql|bak|backup)$ {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # 健康检查端点
    location = /health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }
    
    # Nginx 状态页面（仅本地访问）
    location = /nginx_status {
        stub_status on;
        access_log off;
        allow 127.0.0.1;
        allow ::1;
        deny all;
    }
    
    # PHP-FPM 状态页面（仅本地访问）
    location = /php-fpm_status {
        fastcgi_pass unix:/run/php/php{{ lnmp_php_version }}-fpm.sock;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $fastcgi_script_name;
        allow 127.0.0.1;
        allow ::1;
        deny all;
    }
}


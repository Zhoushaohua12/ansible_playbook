; PHP-FPM 池配置文件
; ⚠️ 教学声明：此配置文件主要用于学习环境，生产环境请根据实际需求调整

[www]
user = www-data
group = www-data

listen = /run/php/php{{ lnmp_php_version }}-fpm.sock
listen.owner = www-data
listen.group = www-data
listen.mode = 0660

; 进程管理器设置
pm = dynamic
pm.max_children = 50
pm.start_servers = 5
pm.min_spare_servers = 2
pm.max_spare_servers = 8
pm.max_requests = 500

; 进程优先级
pm.process_idle_timeout = 10s
pm.max_spawn_rate = 32

; 日志设置
access.log = /var/log/php{{ lnmp_php_version }}-fpm.access.log
slowlog = /var/log/php{{ lnmp_php_version }}-fpm.slow.log
request_slowlog_timeout = 5s

; 错误日志
php_admin_value[error_log] = /var/log/php{{ lnmp_php_version }}-fpm.error.log
php_admin_flag[log_errors] = on

; 安全设置
php_admin_value[expose_php] = off
php_admin_value[allow_url_fopen] = off
php_admin_value[allow_url_include] = off
php_admin_value[disable_functions] = exec,passthru,shell_exec,system,proc_open,popen,curl_exec,curl_multi_exec,parse_ini_file,show_source

; 资源限制
php_admin_value[memory_limit] = {{ lamp_php_memory_limit | default('256M') }}
php_admin_value[max_execution_time] = 30
php_admin_value[max_input_time] = 60
php_admin_value[upload_max_filesize] = {{ lamp_upload_max_filesize | default('64M') }}
php_admin_value[post_max_size] = {{ lamp_upload_max_filesize | default('64M') }}

; 会话设置
php_value[session.save_handler] = files
php_value[session.save_path] = /var/lib/php/sessions
php_value[session.gc_maxlifetime] = 1440

; OpCache 设置
php_admin_value[opcache.enable] = 1
php_admin_value[opcache.memory_consumption] = 128
php_admin_value[opcache.interned_strings_buffer] = 8
php_admin_value[opcache.max_accelerated_files] = 4000
php_admin_value[opcache.revalidate_freq] = 2
php_admin_value[opcache.fast_shutdown] = 1

; 环境变量
env[HOSTNAME] = $HOSTNAME
env[PATH] = /usr/local/bin:/usr/bin:/bin
env[TMP] = /tmp
env[TMPDIR] = /tmp
env[TEMP] = /tmp

; PHP 配置覆盖
php_flag[display_errors] = off
php_admin_value[error_reporting] = E_ALL & ~E_DEPRECATED & ~E_STRICT

; 文件上传设置
php_value[file_uploads] = on
php_value[upload_tmp_dir] = /tmp

; 时区设置
php_value[date.timezone] = Asia/Shanghai
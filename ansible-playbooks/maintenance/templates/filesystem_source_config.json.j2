# 文件系统备份源配置
# ⚠️ 教学声明：此配置文件主要用于学习环境，生产环境请根据实际需求调整

{
  "path": "{{ item.path }}",
  "description": "{{ item.description }}",
  "exclude_patterns": {{ item.exclude_patterns | default([]) | to_nice_json }},
  "retention_days": {{ item.retention_days | default(backup_retention_days) }},
  "backup_method": "{{ filesystem_backup_method }}",
  "compression_level": {{ filesystem_backup_compression_level | default(6) }},
  "bandwidth_limit": "{{ filesystem_backup_bandwidth_limit | default('') }}",
  "incremental": {{ filesystem_backup_incremental | default(true) }},
  "encryption": {{ backup_encryption | default(false) }},
  "created_at": "{{ ansible_date_time.iso8601 }}",
  "updated_at": "{{ ansible_date_time.iso8601 }}"
}
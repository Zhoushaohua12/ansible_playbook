# Alertmanager systemd service template
[Unit]
Description=Prometheus Alertmanager
Documentation=https://prometheus.io/docs/alerting/latest/alertmanager/
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User={{ alertmanager_user | default('alertmanager') }}
Group={{ alertmanager_group | default('alertmanager') }}
ExecStart={{ alertmanager_bin_dir | default('/usr/local/bin') }}/alertmanager \
  --config.file={{ alertmanager_config_dir | default('/etc/alertmanager') }}/alertmanager.yml \
  --storage.path={{ alertmanager_storage_path | default('/var/lib/alertmanager') }} \
  --web.listen-address={{ alertmanager_listen_address | default('0.0.0.0:9093') }}

Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target

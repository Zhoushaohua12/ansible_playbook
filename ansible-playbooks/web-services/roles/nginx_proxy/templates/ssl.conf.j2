# SSL/TLS 配置片段
# ⚠️ 教学说明：此文件包含推荐的 SSL/TLS 安全配置参数

# SSL 协议版本（中文注释：仅启用 TLS 1.2 和 1.3）
ssl_protocols {{ nginx_ssl_protocols }};

# SSL 加密套件（中文注释：使用现代化的强加密套件）
ssl_ciphers {{ nginx_ssl_ciphers }};
ssl_prefer_server_ciphers {{ nginx_ssl_prefer_server_ciphers }};

# SSL 会话缓存（中文注释：提升 HTTPS 性能）
ssl_session_cache {{ nginx_ssl_session_cache }};
ssl_session_timeout {{ nginx_ssl_session_timeout }};
ssl_session_tickets {{ nginx_ssl_session_tickets }};

# OCSP Stapling（中文注释：在线证书状态协议装订）
ssl_stapling {{ nginx_ssl_stapling }};
ssl_stapling_verify {{ nginx_ssl_stapling_verify }};
resolver 8.8.8.8 8.8.4.4 valid=300s;
resolver_timeout 5s;

# DH 参数文件
ssl_dhparam {{ nginx_ssl_dhparam_file }};

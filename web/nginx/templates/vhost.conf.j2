# 虚拟主机配置: {{ nginx_server_name }}
# 由 Ansible 自动生成

{% if nginx_enable_https | default(false) %}
# HTTP 服务器配置（重定向到 HTTPS）
server {
    listen 80;
    listen [::]:80;
    server_name {{ nginx_server_name }};
    
    # 强制跳转到 HTTPS
    return 301 https://$server_name$request_uri;
}

# HTTPS 服务器配置
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ nginx_server_name }};
    
    # SSL 证书配置
    ssl_certificate {{ nginx_ssl_certificate }};
    ssl_certificate_key {{ nginx_ssl_certificate_key }};
    
    # SSL 协议和加密套件
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers on;
    
    # SSL 会话缓存
    ssl_session_cache shared:SSL:10m;
    ssl_session_timeout 10m;
    
    # HSTS（强制浏览器使用 HTTPS）
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
{% else %}
# HTTP 服务器配置
server {
    listen 80;
    listen [::]:80;
    server_name {{ nginx_server_name }};
{% endif %}
    
    # 网站根目录
    root {{ nginx_web_root }};
    
    # 默认首页文件
    index index.html index.htm;
    
    # 字符编码
    charset utf-8;
    
    # 访问日志和错误日志
    access_log /var/log/nginx/{{ nginx_server_name }}_access.log main;
    error_log /var/log/nginx/{{ nginx_server_name }}_error.log warn;
    
{% if nginx_site_type == 'static' %}
    # 静态站点配置
    location / {
        # 尝试按顺序匹配文件、目录，最后返回 404
        try_files $uri $uri/ =404;
    }
    
    # 静态资源缓存配置
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot)$ {
        expires 30d;
        add_header Cache-Control "public, immutable";
    }
    
{% elif nginx_site_type == 'proxy' %}
    # 反向代理配置
    location / {
        # 代理到后端应用服务器
        proxy_pass http://{{ nginx_proxy_backend_host }}:{{ nginx_proxy_backend_port }};
        
        # 传递原始请求信息
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # 代理超时配置
        proxy_connect_timeout {{ nginx_proxy_timeout | default('60s') }};
        proxy_send_timeout {{ nginx_proxy_timeout | default('60s') }};
        proxy_read_timeout {{ nginx_proxy_timeout | default('60s') }};
        
        # 启用代理缓冲
        proxy_buffering {{ nginx_proxy_buffering | default('on') }};
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        
        # WebSocket 支持（如果需要）
        {% if nginx_enable_websocket | default(false) %}
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        {% endif %}
    }
    
    # 静态资源直接由 Nginx 处理（性能优化）
    location /static/ {
        alias {{ nginx_web_root }}/static/;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }
    
    location /media/ {
        alias {{ nginx_web_root }}/media/;
        expires 7d;
    }
{% endif %}
    
    # 禁止访问隐藏文件（安全加固）
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
    
    # 禁止访问敏感文件
    location ~* \.(sql|bak|swp|old|conf)$ {
        deny all;
    }
    
    # 自定义错误页面
    error_page 404 /404.html;
    error_page 500 502 503 504 /50x.html;
    location = /50x.html {
        root /usr/share/nginx/html;
    }
}

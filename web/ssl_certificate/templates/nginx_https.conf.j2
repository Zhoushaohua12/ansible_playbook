# HTTP 到 HTTPS 跳转
server {
    listen 80;
    listen [::]:80;
    server_name {{ cert_common_name }};
    
    # Let's Encrypt 验证路径
    location /.well-known/acme-challenge/ {
        root /var/www/letsencrypt;
    }
    
    # 其他请求跳转到 HTTPS
    location / {
        return 301 https://$host$request_uri;
    }
}

# HTTPS 虚拟主机
server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ cert_common_name }};
    
    # SSL 证书配置
    ssl_certificate /etc/pki/tls/certs/fullchain.pem;
    ssl_certificate_key /etc/pki/tls/private/server.key;
    
    # SSL 协议与加密套件
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384';
    ssl_prefer_server_ciphers on;
    
    # SSL 会话管理
    ssl_session_cache shared:SSL:50m;
    ssl_session_timeout 1d;
    ssl_session_tickets off;
    
    # OCSP Stapling
    ssl_stapling on;
    ssl_stapling_verify on;
    ssl_trusted_certificate /etc/pki/tls/certs/chain.pem;
    
    # HSTS 头（告诉浏览器只使用 HTTPS）
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    
    # 其他安全头
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    add_header Content-Security-Policy "default-src 'self' http: https: data: blob: 'unsafe-inline'" always;
    
    # 日志配置
    access_log /var/log/nginx/{{ cert_common_name }}_access.log;
    error_log /var/log/nginx/{{ cert_common_name }}_error.log;
    
    # 网站根目录（示例）
    root /var/www/html;
    
    # 默认文件
    index index.html index.htm;
    
    # 位置配置
    location / {
        try_files $uri $uri/ =404;
    }
    
    # 拒绝访问敏感文件
    location ~ /\. {
        deny all;
    }
}
